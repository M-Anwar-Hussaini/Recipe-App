<div>
  <h1 class="text-center py-4">Shopping List</h1>
  <% if @foods.empty? %>
    <p>There is not any food yet</p>
  <% else %>
    <div class="d-flex justify-content-center gap-5 pb-3">
      <p class="fs-3">Amount of foods to buy: <%= @counter%> </p>
      <p class="fs-3">Total value of food needed: $ <%= @total %></p>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Food name</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td scope="row"> <%= food.name %> </td>
            <td> <%= food.quantity %> <%= food.measurement_unit %></td>
            <td> <%= food.price * food.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
       